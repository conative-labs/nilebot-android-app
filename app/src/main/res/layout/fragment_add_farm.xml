<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:id="@+id/view_sep"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/layout_toolbar"
        android:background="#0256A3">


        <TextView
            android:id="@+id/txt_add_farm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_16"
            android:layout_marginTop="@dimen/default_16"
            android:fontFamily="@font/questv1"
            android:text="@string/add_farm"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7fafc"
        tools:context=".features.home.farms.addFarm.AddFarmFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/default_16"
            android:paddingEnd="@dimen/default_16">


            <TextView
                style="@style/font_blue_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_16"
                android:text="@string/farm_namee"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/edt_pharm_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_view_white_stroke_gray"
                android:drawablePadding="5dp"
                android:fontFamily="@font/questv1"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/txt_error_farm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/default_16"
                android:fontFamily="@font/questv1"
                android:textColor="@color/red"
                android:visibility="gone" />


            <TextView
                style="@style/font_blue_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/farm_type"
                android:textSize="16sp" />


            <Spinner
                android:id="@+id/spinner_farmtype"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/default_16"
                android:background="@drawable/spinner_custom" />

            <TextView
                android:id="@+id/txt_error_farm_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/default_16"
                android:fontFamily="@font/questv1"
                android:textColor="@color/red"
                android:visibility="gone" />

            <TextView
                style="@style/font_blue_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:text="@string/country_governrate"
                android:textSize="16sp" />




            <EditText
                android:id="@+id/edt_country"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_view_white_stroke_gray"
                android:drawablePadding="5dp"
                android:fontFamily="@font/questv1"
                android:inputType="text"
                android:paddingStart="8dp"
                android:visibility="gone"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/txt_error_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/default_16"
                android:fontFamily="@font/questv1"
                android:textColor="@color/red"
                android:visibility="gone" />

            <TextView
                style="@style/font_blue_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/location_on_map"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_map"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_view_white_stroke_gray"
                android:drawableEnd="@drawable/ic_map"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimary"
                android:editable="false"
                android:fontFamily="@font/questv1"
                android:inputType="none"
                android:paddingStart="8dp"
                android:paddingEnd="@dimen/default_16"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_error_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/default_16"
                android:fontFamily="@font/questv1"
                android:textColor="@color/red"
                android:visibility="gone" />


            <TextView
                style="@style/font_blue_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/area"
                android:textSize="16sp" />


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/edt_area"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_view_white_stroke_gray"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/questv1"
                    android:maxLength="9"
                    android:inputType="numberDecimal"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="6dp"
                    android:paddingEnd="8dp" />

                <Spinner
                    android:id="@+id/spinner_unit_areas"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/edt_area"
                    android:layout_height="48dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="@dimen/default_16"
                    android:background="@drawable/spinner_custom" />


            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_error_area"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_16"
                    android:fontFamily="@font/questv1"
                    android:textColor="@color/red"
                    android:visibility="visible" />

                  <TextView
                    android:id="@+id/txt_error_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_16"
                    android:fontFamily="@font/questv1"
                    android:textColor="@color/red"
                    android:visibility="gone" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_time_zones"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/default_16"
                android:layout_marginEnd="16dp"
                android:background="@drawable/spinner_custom"
                />


            <Button
                android:id="@+id/btn_add_farm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_corner_button_blue"
                android:fontFamily="@font/questv1"
                android:text="@string/add_farm"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

