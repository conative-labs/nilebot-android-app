<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_no_internet" />


        <TextView
            android:id="@+id/txt_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_connection"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/questv1"
            android:text="@string/error_connection"
            android:textColor="@color/colorTextLight"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="190dp"
            android:layout_marginBottom="@dimen/default_16"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_internet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:foreground="?selectableItemBackground"
            android:background="@drawable/round_corner_button_blue"
            android:elevation="@dimen/default_16"
            android:textColor="@color/white"
            android:fontFamily="@font/questv1"
            android:text="@string/try_again"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>