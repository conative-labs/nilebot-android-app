<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/lay_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/txt_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/questv1"
            android:text="@string/edit_sensor_thresholds"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_16"
        android:orientation="vertical">


        <TextView
            style="@style/font_text_hint"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_16"
            android:text="@string/threshold_max" />


        <EditText
            android:id="@+id/edt_max_threshold"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/questv1"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_view_white_stroke_gray"
            android:drawablePadding="5dp"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/txt_error_max_treshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/default_16"
            android:fontFamily="@font/questv1"
            android:textColor="@color/red"
            android:visibility="gone" />


        <TextView
            style="@style/font_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_16"
            android:text="@string/min_threshold" />


        <EditText
            android:id="@+id/edt_min_threshold"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:fontFamily="@font/questv1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_view_white_stroke_gray"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />


        <TextView
            android:id="@+id/txt_error_min_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/default_16"
            android:fontFamily="@font/questv1"
            android:textColor="@color/red"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_question"
            android:layout_marginTop="@dimen/default_16"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:foreground="?selectableItemBackground"
                android:layout_marginEnd="@dimen/default_16"
                android:background="@drawable/round_view_white_stroke_gray"
                android:text="@string/cancel"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:foreground="?selectableItemBackground"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/default_16"
                android:background="@drawable/round_corner_button_blue"
                android:text="@string/edit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>