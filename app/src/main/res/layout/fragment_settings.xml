<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF5FA">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEF5FA"
        tools:context=".features.home.settings.SettingsFragment">

        <!-- TODO: Update blank fragment layout -->
        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_toolbar" />

        <RelativeLayout
            android:id="@+id/view_sep"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/layout_toolbar"
            android:background="#0256A3">


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_sep"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/lay_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_16"
                android:layout_marginTop="24dp"
                android:elevation="2dp"
                android:layout_marginEnd="@dimen/default_16"
                android:background="@drawable/round_corner_whitee">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginTop="@dimen/default_16"
                    android:layout_marginBottom="@dimen/default_16"
                    android:fontFamily="@font/questv1"
                    android:text="@string/language"

                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_lang_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/default_16"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/ic_navigate_forward" />

                <LinearLayout
                    android:id="@+id/lay_lang_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_lang_indicator"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/default_16"
                    android:visibility="visible">

                    <RadioGroup
                        android:id="@+id/radio_lang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/check_arabic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arabic" />

                        <RadioButton
                            android:id="@+id/check_english"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_16"
                            android:text="@string/english" />

                    </RadioGroup>

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lay_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_16"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/default_16"
                android:elevation="2dp"
                android:background="@drawable/round_corner_whitee">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/questv1"
                    android:text="@string/profile"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_profile_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/ic_navigate_forward" />
            </RelativeLayout>





            <RelativeLayout
                android:id="@+id/lay_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_16"
                android:layout_marginTop="12dp"
                android:elevation="2dp"
                android:layout_marginEnd="@dimen/default_16"
                android:background="@drawable/round_corner_whitee">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/questv1"
                    android:text="@string/devices"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_sequence_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/ic_navigate_forward" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_phones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_16"
                android:layout_marginTop="12dp"
                android:elevation="2dp"
                android:layout_marginEnd="@dimen/default_16"
                android:background="@drawable/round_corner_whitee">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/questv1"
                    android:text="@string/phone_numbers"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/ic_navigate_forward" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_16"
                android:layout_marginTop="12dp"
                android:elevation="2dp"
                android:layout_marginEnd="@dimen/default_16"
                android:background="@drawable/round_corner_whitee">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/questv1"
                    android:text="@string/change_password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_change_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/ic_navigate_forward" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lay_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_16"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:elevation="2dp"
                android:layout_marginEnd="@dimen/default_16"
                android:background="@drawable/round_corner_whitee">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/questv1"
                    android:text="@string/logout"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"

                    android:layout_marginEnd="22dp"
                    android:src="@drawable/ic_navigate_forward" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>