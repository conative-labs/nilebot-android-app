<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/round_corner_whitee"
    android:gravity="center"
    android:elevation="2dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_pond_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_16"
        android:src="@drawable/ic_farm" />


    <TextView
        android:id="@+id/txt_farm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_16"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/questv1"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Farm 1"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_farm_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_farm_name"
        android:layout_toEndOf="@+id/img_logo"
        android:fontFamily="@font/questv1"
        android:includeFontPadding="false"
        android:text="Governament"
        android:textColor="#750256A3"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/default_16"
            android:background="@drawable/circle_stroke"
            android:foreground="?selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_delete_24px"
            android:tint="@color/red" />

        <View
            android:id="@+id/view_sep"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/btn_delete"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_stroke"
            android:layout_toEndOf="@+id/view_sep"
            android:foreground="?selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_edit_24px"
            android:tint="@color/green" />
    </RelativeLayout>

</LinearLayout>