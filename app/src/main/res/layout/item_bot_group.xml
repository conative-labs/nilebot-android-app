<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:layout_marginBottom="@dimen/default_16"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_weight="1"
        android:background="@drawable/round_light_corner_whitee">

        <ImageView
            android:id="@+id/img_device_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_16"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_farm" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/default_16"
            android:layout_toStartOf="@+id/btn_edit"
            android:layout_toEndOf="@+id/img_device_icon"
            android:gravity="center|start"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_name"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_bot_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:maxLines="2"
                    android:text="asdjasfjkaska skas fkjas fajs kajsfk"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/questv1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_sensor_number"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@+id/btn_edit"
                    android:fontFamily="@font/questv1"
                    android:text="5fsf7-sf247f"
                    android:textColor="#750256A3"
                    android:textSize="10sp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">


                <TextView
                    android:id="@+id/txt_bot_software"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginEnd="@dimen/default_16"
                    android:fontFamily="@font/questv1"
                    android:text="sw:klgj18"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/txt_bot_hardware"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/txt_bot_software"
                    android:gravity="start"
                    android:fontFamily="@font/questv1"
                    android:text="hw :147"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp" />

            </LinearLayout>

        </RelativeLayout>



        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/btn_delete"
            android:background="@drawable/circle_stroke"
            android:foreground="?selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_edit"
            android:tint="@color/green" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_nav_down"
            android:background="@drawable/circle_stroke"
            android:foreground="?selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_delete"
            android:tint="@color/red" />


        <ImageView
            android:id="@+id/img_nav_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_navigate_down"
            android:tint="#94acc1" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:elevation="4dp"
        android:background="#4DDFDFDF"/>


</LinearLayout>