<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The middle layer is green circle.-->
    <item>
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp" />

            <gradient
                android:angle="0"
                android:endColor="#005FAB"
                android:startColor="#0C2372"
                android:type="linear" />
        </shape>
    </item>

    <!-- The top layer is red ring.-->
    <item
        android:bottom="30dp"
        android:left="30dp"
        android:right="30dp"
        android:top="30dp">
        <bitmap android:src="@drawable/add" />
    </item>
</layer-list>